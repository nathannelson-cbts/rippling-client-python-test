# Rippling API Configuration
# Copy this file to .env and fill in your actual values

# Required: Your Rippling API Bearer Token
RIPPLING_BEARER_TOKEN=your_bearer_token_here

# API Base URL - uncomment and modify for sandbox/testing environments
# Production (default):
# RIPPLING_BASE_URL=https://rest.ripplingapis.com
# Sandbox (for testing):
# RIPPLING_BASE_URL=https://rest.sandbox.ripplingapis.com

# Optional: Timeout settings
# RIPPLING_TIMEOUT_CONNECT=30.0
# RIPPLING_TIMEOUT_READ=60.0

# Optional: Retry and rate limit settings
# RIPPLING_MAX_RETRIES=3
# RIPPLING_RATE_LIMIT_REQUESTS=300
# RIPPLING_RATE_LIMIT_WINDOW=10.0

# Optional: Logging
# RIPPLING_LOG_LEVEL=INFO
# RIPPLING_LOG_FORMAT=console
